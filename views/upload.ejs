<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>üìÇ Upload Files</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .form-wrapper {
      background: #ffffff;
      padding: 40px 35px;
      border-radius: 20px;
      box-shadow: 0px 12px 30px rgba(0, 128, 0, 0.2);
      width: 100%;
      max-width: 450px;
      position: relative;
      transition: all 0.3s ease-in-out;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 28px;
      color: #2e7d32;
    }

    select, input[type="text"], input[type="file"] {
      width: 100%;
      padding: 12px 15px;
      margin-bottom: 20px;
      font-size: 15px;
      border: 1px solid #a5d6a7;
      border-radius: 12px;
      background-color: #f1fdf4;
      outline: none;
      transition: border 0.3s, box-shadow 0.3s;
    }

    select:focus,
    input[type="text"]:focus,
    input[type="file"]:focus {
      border: 1.5px solid #66bb6a;
      box-shadow: 0 0 8px rgba(102, 187, 106, 0.5);
    }

    button {
      background: linear-gradient(to right, #66bb6a, #43a047);
      color: white;
      border: none;
      padding: 12px 20px;
      font-size: 16px;
      width: 100%;
      border-radius: 15px;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s;
    }

    button:hover {
      transform: scale(1.02);
      box-shadow: 0px 10px 20px rgba(76, 175, 80, 0.3);
    }

    #uploadStatus {
      text-align: center;
      margin-top: 15px;
      font-weight: 600;
      color: #388e3c;
    }

    #uploadMessage {
      margin-top: 10px;
      text-align: center;
      color: #28a745;
    }

    #uploadMessage:where([style*="‚ùå"]) {
      color: #dc3545;
    }

    #loader {
      margin-top: 10px;
      width: 100%;
      height: 15px;
      background: #e0f2f1;
      border-radius: 10px;
      overflow: hidden;
      position: relative;
      display: none;
    }

    #loader::after {
      content: '';
      position: absolute;
      height: 100%;
      width: 0%;
      background: linear-gradient(to right, #43a047, #81c784);
      animation: none;
      border-radius: 10px;
      transition: width 0.3s ease-in-out;
    }

    .form-footer {
      margin-top: 25px;
      font-size: 13px;
      text-align: center;
      color: #777;
    }

    .form-footer span {
      color: #388e3c;
      font-weight: bold;
    }

    @keyframes loading {
      0% { width: 0%; }
      100% { width: 100%; }
    }
  </style>
</head>
<body>

  

  <div class="form-wrapper">
    <h2>Upload Notes</h2>
    <form id="uploadForm" enctype="multipart/form-data">
      <select name="title" required>
        <option value="">Select title</option>
        <option value="Exam Papers">Exam Papers</option>
        <option value="Notes">Notes</option>
      </select>

      <select name="year" required>
        <option value="">Select Year</option>
        <option value="1">1st Year</option>
        <option value="2">2nd Year</option>
        <option value="3">3rd Year</option>
      </select>

      <select name="branch" required>
        <option value="">Select Branch</option>
        <option value="cse">CSE</option>
        <option value="ece">ECE</option>
        <option value="ee">EE</option>
        <option value="ce">CE</option>
        <option value="me">ME</option>
      </select>

      <input type="text" name="subject" placeholder="Subject" required />
      <input type="file" name="file" required />
      <button type="submit">Upload</button>

      <div id="loader"><div id="progressFill" style="height: 100%; width: 0%; background: linear-gradient(to right, #43a047, #66bb6a); border-radius: 10px;"></div></div>
      <div id="uploadMessage"></div>
      <div id="uploadStatus"></div>
    </form>
  </div>

  <script>


    document.getElementById("uploadForm").addEventListener("submit", async (e) => {
  e.preventDefault();

  const form = e.target;
  const formData = new FormData(form);
  const fileInput = form.querySelector('input[type="file"]');
  const file = fileInput.files[0];
  const loader = document.getElementById("loader");
  const uploadMessage = document.getElementById("uploadMessage");
  const progressFill = document.getElementById("progressFill");

  // Validation for PDF and size <= 10MB
  if (!file) {
    uploadMessage.textContent = "‚ùå Please select a file.";
    return;
  }

  if (file.type !== "application/pdf") {
    uploadMessage.textContent = "‚ùå Only PDF files are allowed.";
    return;
  }

  if (file.size > 10 * 1024 * 1024) {
    uploadMessage.textContent = "‚ùå File size must be under 10MB.";
    return;
  }

  loader.style.display = "block";
  progressFill.style.width = "0%";
  uploadMessage.textContent = "";

  let percent = 0;
  const interval = setInterval(() => {
    if (percent < 95) {
      percent += 1;
      progressFill.style.width = percent + "%";
    }
  }, 50);

  try {
    const response = await fetch(`https://resourcesapi-g8dtgtdrb7eqcxfw.centralindia-01.azurewebsites.net/api/notes/upload`, {
      method: "post",
      body: formData
    });

    const result = await response.json();
    clearInterval(interval);
    progressFill.style.width = "100%";

    if (response.ok) {
      uploadMessage.textContent = "‚úÖ File uploaded successfully!";
      form.reset();
    } else {
      uploadMessage.textContent = "‚ùå Upload failed: " + result.message;
    }
  } catch (error) {
    clearInterval(interval);
    progressFill.style.width = "100%";
    console.error("Upload error:", error);
    uploadMessage.textContent = "‚ùå Upload failed. Try again.";
  } finally {
    setTimeout(() => {
      loader.style.display = "none";
      progressFill.style.width = "0%";
    }, 2000);
  }
});


  </script>

</body>
</html>
